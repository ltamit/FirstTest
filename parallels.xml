<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="LambaTestSuite" thread-count="5" parallel="tests">

    <test name="WIN11FIREFOX">
        <parameter name="browser" value="Firefox"/>
        <parameter name="version" value="98.0"/>
        <parameter name="platform" value="Windows 11"/>
        <classes>
            <class name="com.lambdatest.homePageSanity"/>
        </classes>
    </test> <!-- Test -->

    <test name="WIN11CHROME">
        <parameter name="browser" value="Chrome"/>
        <parameter name="version" value="99.0"/>
        <parameter name="platform" value="Windows 11"/>
        <classes>
            <class name="com.lambdatest.homePageSanity"/>
        </classes>
    </test> <!-- Test -->

    <test name="WIN10OPERA">
        <parameter name="browser" value="Opera"/>
        <parameter name="version" value="83.0"/>
        <parameter name="platform" value="Windows 10"/>
        <classes>
            <class name="com.lambdatest.homePageSanity"/>
        </classes>
    </test> <!-- Test -->
    >

    <test name="MACTESTSAFARI">
        <parameter name="browser" value="Safari"/>
        <parameter name="version" value="15.0"/>
        <parameter name="platform" value="MacOS Monterey"/>
        <classes>
            <class name="com.lambdatest.homePageSanity"/>
        </classes>
    </test> <!-- Test -->

    <test name="MACTESTCHROME">
        <parameter name="browser" value="Chrome"/>
        <parameter name="version" value="98.0"/>
        <parameter name="platform" value="MacOS Catalina"/>
        <classes>
            <class name="com.lambdatest.homePageSanity"/>
        </classes>
    </test> <!-- Test -->

</suite>